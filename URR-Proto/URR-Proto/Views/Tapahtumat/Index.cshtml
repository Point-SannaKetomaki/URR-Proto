<!-- Tapahtumat -->

@{
    ViewBag.Title = "Index";
}

<div class="container" id="wrapper">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index">Etusivu</a></li>
                <li class="breadcrumb-item">Tapahtumat</li>
                <li class="breadcrumb-item active" aria-current="page">Kuvakaruselli</li>
            </ol>
        </nav>
    </div>

    <section>
        <h1 id="alku">Kuvakaruselli harjoitusmielessä</h1>
        <p>Kuvat tähän kuvakaruselliin on valittu <a href="https://pixabay.com/fi/" target="_blank">Pixabay-palvelusta</a></p>

        <div class="bd-example">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="max-width:50%; margin:0 auto;">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/OmatKuvat/carouseldemo/bird-1045954_1280.jpg" class="d-block w-100" alt="Lintu etsii ruokaa">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Ruoanetsintä</h5>
                            <p>Tiainen etsii itselleen ravintoa.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/OmatKuvat/carouseldemo/butterfly-1127666_1280.jpg" class="d-block w-100" alt="Perhoset kesäniityllä">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Perhoset kesäniityllä</h5>
                            <p>Kesän ensimmäiset perhoset niityllä.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/OmatKuvat/carouseldemo/the-road-815297_1280.jpg" class="d-block w-100" alt="Kesäilta kujalla">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Kesäilta kujalla</h5>
                            <p>Kesäilta viilenee ja sumu nousee</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/OmatKuvat/carouseldemo/fall-1072821_1280.jpg" class="d-block w-100" alt="Upea ruska">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Ruska on tullut</h5>
                            <p>Ruskan värittämät puut reunustavat kylätietä.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/OmatKuvat/carouseldemo/aurora-1197753_1280.jpg" class="d-block w-100" alt="Revontulet">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Revontulet tunturissa</h5>
                            <p>Talviyönä revontulet valaisevat taivaan.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </section>
</div>
